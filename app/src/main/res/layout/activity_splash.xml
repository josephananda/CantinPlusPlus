<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashAct">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/bluePrimary"/>

    <ImageView
        android:layout_width="190dp"
        android:layout_height="167dp"
        android:src="@drawable/bubble1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="201dp"
        android:layout_height="142dp"
        android:src="@drawable/bubble2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/linearlayout"
        android:orientation="vertical"
        android:layout_width="336dp"
        android:layout_height="330dp"
        android:background="@drawable/bubble3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="107dp"
            android:layout_height="124dp"
            android:layout_marginTop="41dp"
            android:layout_gravity="center"
            android:src="@drawable/logo"/>

        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cantinplusplus"
            android:textColor="@color/whitePrimary"
            android:textSize="28sp"
            android:layout_marginTop="21dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/app_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subtitle_splash"
            android:textColor="@color/whitePrimary"
            android:textSize="18sp"
            android:layout_marginTop="21dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <ImageView
        android:layout_width="284dp"
        android:layout_height="76dp"
        android:src="@drawable/bubble4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:layout_width="117dp"
        android:layout_height="194dp"
        android:src="@drawable/bubble5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>